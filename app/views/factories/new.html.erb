<div class="text-center">
  <h2>Criar Nova Fabrica</h2>
  <p>Campos com * são obrigatórios.</p>
</div>

<%= simple_form_for @factory do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone %>
    <%= f.input :fax %>
    <%= f.input :email %>
    <%= f.input :website %>
    <%= f.input :contact_person %>
    <%= f.input :contact_person_phone %>
    <%= f.input :contact_person_email %>

    <%= f.button :submit %>
  </div>
<% end %>

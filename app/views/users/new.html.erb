<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.fields_for :company do |c| %>
      <div class="field">
        <%= c.label :name %><br />
        <%= c.text_field :name %>
      </div>
    <% end %>
  
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email %>
    </div>
  
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </div>
  
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation %>
    </div>
  
    <%= f.submit "Sign up" %>
  <% end %>
  